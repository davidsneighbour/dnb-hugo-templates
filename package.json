{
  "name": "@davidsneighbour/templates",
  "description": "A collection of text blocks for use in DNB-Hugo. You probably won't have any use of this.",
  "version": "1.0.0",
  "author": "Patrick Kollitsch <patrick@davids-neighbour.com>",
  "bugs": {
    "url": "https://github.com/davidsneighbour/templates/issues"
  },
  "dependencies": {
    "@davidsneighbour/tools": "^3.4.6",
    "mem": ">=9.0.1",
    "yargs-parser": ">=21.0.0"
  },
  "eslintConfig": {
    "extends": "@davidsneighbour/eslint-config"
  },
  "homepage": "https://github.com/davidsneighbour/hugo-templates",
  "license": "MIT",
  "remarkConfig": {
    "plugins": [
      "@davidsneighbour/remark-preset-lint",
      [
        "remark-lint-write-good",
        false
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidsneighbour/hugo-templates.git"
  },
  "scripts": {
